{
  "name": "test-creatingly",
  "version": "1.0.0",
  "description": "Comprehensive automation test suite for Creatingly Platform",
  "main": "index.js",
  "scripts": {
    "test": "cypress run",
    "test:open": "cypress open",
    "test:headed": "cypress run --headed",
    "test:chrome": "cypress run --browser chrome",
    "test:firefox": "cypress run --browser firefox",
    "test:edge": "cypress run --browser edge",
    "test:functional": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'Functional'",
    "test:ui": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'UI'",
    "test:usability": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'Usability'",
    "test:performance": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'Performance'",
    "test:compatibility": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'Compatibility'",
    "test:accessibility": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'Accessibility'",
    "test:security": "cypress run --spec 'cypress/e2e/interface_automation.cy.js' --grep 'Security'",
    "test:functional-positive": "cypress run --spec 'cypress/e2e/functional_positive_tests.cy.js'",
    "test:functional-negative": "cypress run --spec 'cypress/e2e/functional_negative_tests.cy.js'",
    "test:ui-only": "cypress run --spec 'cypress/e2e/ui_tests.cy.js'",
    "test:usability-only": "cypress run --spec 'cypress/e2e/usability_tests.cy.js'",
    "test:performance-only": "cypress run --spec 'cypress/e2e/performance_tests.cy.js'",
    "test:compatibility-only": "cypress run --spec 'cypress/e2e/compatibility_tests.cy.js'",
    "test:all-separate": "npm run test:functional-positive && npm run test:functional-negative && npm run test:ui-only && npm run test:usability-only && npm run test:performance-only && npm run test:compatibility-only"
  },
  "keywords": ["cypress", "automation", "testing", "e2e", "functional", "ui", "performance"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^14.5.2"
  }
}
